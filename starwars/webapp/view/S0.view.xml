<mvc:View
    controllerName="pina.starwars.controller.S0"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
                    <subHeader>
                     <Toolbar visible="true" width="" design="Solid" enabled="true">
                            <content>
                             <SearchField visible="true" width="100%" showSearchButton="true" placeholder="Search"/>
                            </content>
                       </Toolbar>                     
					</subHeader>
                    <content>

                        <List
                            items="{peopleList>/results}"
                            headerText="Characters" >
                            <ObjectListItem
                                title="{peopleList>name}"
                                type="Active"
                                press="onListItemPress"

                                
                                >

                            </ObjectListItem>
                        </List>                         					
					
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
